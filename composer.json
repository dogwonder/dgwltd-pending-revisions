{
  "name": "dgwltd/pending-revisions",
  "description": "Modern WordPress plugin for managing pending revisions and draft workflows",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "DGW.ltd",
      "email": "hello@dgw.ltd",
      "homepage": "https://dgw.ltd"
    }
  ],
  "homepage": "https://dgw.ltd",
  "support": {
    "issues": "https://github.com/dogwonder/dgwltd-pending-revisions/issues"
  },
  "require": {
    "php": ">=8.0",
    "composer/installers": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "phpcompatibility/php-compatibility": "^9.3",
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "DGW\\PendingRevisions\\": "includes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DGW\\PendingRevisions\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpcs": "phpcs",
    "phpcbf": "phpcbf",
    "phpunit": "phpunit",
    "test": [
      "@phpcs",
      "@phpunit"
    ]
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "sort-packages": true,
    "platform": {
      "php": "8.0"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}